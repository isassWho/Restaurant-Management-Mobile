<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_waiting_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/icons"
            android:icon="@drawable/ic_waiting_list"
            android:text="@string/fragmentWaitingList" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_tables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_tables"
            android:text="@string/fragmentEmpty" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_reservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_reservations"
            android:text="@string/fragmentReservations" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>